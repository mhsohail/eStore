    window.onresize = function (event) {
        if (window.innerWidth <= 800 && window.innerWidth > 480) {
            document.body.className = 'tablet';
        } else if (window.innerWidth <= 480) {
            document.body.className = 'mobile';
        } else {
            document.body.className = '';
